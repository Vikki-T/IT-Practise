#include <stdio.h>

int main() {
    int t1, t2, t3;

    printf("Введіть 3 значення: \n");
    scanf("%d", &t1); 
    scanf("%d", &t2); 
    scanf("%d", &t3); 
  
   
    float average_time = (float)(t1 + t2 + t3) / 3; 
    average_time/=3;

   
    printf("Час, необхідний для з'їдання пирога: %.2f годин(и). \n", average_time); 

    return 0;
}
